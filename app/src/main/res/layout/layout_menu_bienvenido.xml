<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuBienvenidoRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Header negro -->
    <View
        android:id="@+id/headerBienvenido"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Texto Bienvenido  -->
    <TextView
        android:id="@+id/txtBienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="@+id/headerBienvenido"
        app:layout_constraintBottom_toBottomOf="@+id/headerBienvenido"
        app:layout_constraintStart_toStartOf="@+id/headerBienvenido"
        app:layout_constraintEnd_toEndOf="@+id/headerBienvenido"/>

    <!-- Contenedor vertical de opciones -->
    <LinearLayout
        android:id="@+id/menuOpciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerBienvenido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


    <!-- Fila: Inicio -->
    <LinearLayout
        android:id="@+id/filaInicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">
       <ImageView
           android:id="@+id/iconInicio"
           android:layout_width="24dp"
           android:layout_height="24dp"
           android:src="@mipmap/ic_launcher_foreground"/>
       <TextView
           android:id="@+id/txtInicio"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="12dp"
           android:text="Inicio"
           android:textSize="14sp"/>

    </LinearLayout>

    <!-- Fila: Vender -->
    <LinearLayout
        android:id="@+id/filaVender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconVender"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher_foreground"/>
    <TextView
        android:id="@+id/txtVender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Vender"
        android:textSize="14sp"/>
    </LinearLayout>

    <!-- Fila: Compras -->
    <LinearLayout
        android:id="@+id/filaCompras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iconCompras"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher_foreground"/>
    <TextView
        android:id="@+id/txtCompras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Compras"
        android:textSize="14sp"/>
    </LinearLayout>
    <!-- Fila: Categorías -->
    <LinearLayout
    android:id="@+id/filaCategorias"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iconCategorias"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_launcher_foreground"/>
    <TextView
        android:id="@+id/txtCategorias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Categorias"
        android:textSize="14sp"/>
</LinearLayout>
    <!-- Fila: Perfil -->
    <LinearLayout
        android:id="@+id/filaPerfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">
    <ImageView
        android:id="@+id/iconPerfil"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/ic_launcher_foreground"/>
    <TextView
        android:id="@+id/txtPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Perfil"
        android:textSize="14sp"/>
    </LinearLayout>
    <!-- Línea separadora -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"/>
    <!-- Fila: Cerrar Sesión -->
    <LinearLayout
        android:id="@+id/filaCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iconCerrarSesion"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher_foreground"/>

        <TextView
            android:id="@+id/txtCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Cerrar Sesion"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>