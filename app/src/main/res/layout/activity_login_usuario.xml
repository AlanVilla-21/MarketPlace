<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginUsuario">

    <!-- titulo -->
    <TextView
        android:id="@+id/NameAppLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/register_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/loginTitle"
        android:layout_width="0dp"
        android:layout_height = "wrap_content"
        android:text="@string/login_subtitle"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/NameAppLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/LoginText"
        android:layout_width="0dp"
        android:layout_height = "wrap_content"
        android:text="@string/login_subtitle_text"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        app:layout_constraintTop_toBottomOf="@+id/loginTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
   <!--Email -->
    <EditText
        android:id="@+id/EmailLogin"
        android:layout_width="0dp"
        android:layout_height = "48dp"
        android:layout_marginTop = "32dp"
        android:layout_marginStart = "32dp"
        android:layout_marginEnd= "32dp"
        android:hint="@string/hint_email"
        android:inputType="textEmailAddress"
        android:background="@android:drawable/edit_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/LoginText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/PasswordLogin"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop = "12dp"
        android:layout_marginStart = "32dp"
        android:layout_marginEnd= "32dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:background="@android:drawable/edit_text"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintTop_toBottomOf="@+id/EmailLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <!--Botton iniciar sesion -->
    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop = "12dp"
        android:layout_marginStart = "32dp"
        android:layout_marginEnd= "32dp"
        android:text="@string/sign_in"
        android:backgroundTint="@color/black"
        android:textColor="@color/black"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@+id/PasswordLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/left_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop = "24dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_contraintStart_toStartOf="parent"
        app:layout_contraintEnd_toStartOf= "@id/OLogin"/>
    <TextView
        android:id="@+id/OLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        android:layout_marginTop = "16dp"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toEndOf = "@id/left_line"
        app:layout_constraintEnd_toStartOf = "@id/right_line"/>
    <View
        android:id="@+id/right_line"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop = "24dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/button"
        app:layout_constraintStart_toEndOf = "@id/OLogin"
        app:layout_constraintEnd_toStartOf = "parent"/>
    <Button
        android:id="@+id/google_button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop = "24dp"
        android:layout_marginStart = "32dp"
        android:layout_marginEnd = "32dp"
        android:text="@string/botton_google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:backgroundTint="@color/google_button_gray"
        app:layout_constraintTop_toBottomOf="@id/OLogin"
        app:layout_constraintStart_toStart ="parent"
        app:layout_constraintEnd_toEndOf = "parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
