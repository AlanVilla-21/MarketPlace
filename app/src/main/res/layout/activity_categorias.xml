<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".categorias">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/black"
        android:paddingStart ="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/Menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/treslineas" />
    <TextView
        android:id="@+id/MarcoNegro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/categoria"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contenedor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/BotonesAbajo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <LinearLayout
        android:id="@+id/fila1"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnVehiculos"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria1"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/vehiculos"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnRopa_de_mujer"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria2"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/mujer"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btnElectronica"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria3"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/electronica"
            android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fila2"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMuebles"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/categoria4"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:drawableTop="@drawable/sofa"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnRopa_de_varon"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/categoria5"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ropadevaron"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnAlquileres"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria6"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/alquileres"
            android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fila3"
            style="?android:attr/buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInstrumentos"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/categoria7"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:drawableTop="@drawable/instrumentos"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnRopa_de_bebe"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/categoria8"
                android:gravity="center"
                android:paddingVertical="16dp"
                android:background="@android:color/transparent"
                android:textColor="@color/black"
                android:drawableTop="@drawable/ropadebebe"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btndeportes"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria9"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/deportes"
            android:textSize="13sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BotonesAbajo"
        style="?android:attr/buttonBarStyle"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnCasa"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/casita" />

        <Button
            android:id="@+id/btnCarrito"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/carrito1" />

        <Button
            android:id="@+id/btnPerfil"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/foto_perfil"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
<com.google.android.material.navigation.NavigationView
android:id="@+id/navView"
android:layout_width="280dp"
android:layout_height="match_parent"
android:layout_gravity="start"
app:menu="@menu/menu_dashboard" />

</androidx.drawerlayout.widget.DrawerLayout>