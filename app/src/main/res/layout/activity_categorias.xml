<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".categorias">
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/black"
        android:paddingStart ="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:id="@+id/Menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/treslineas" />
    <TextView
        android:id="@+id/MarcoNegro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/categoria"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/white" />
    </LinearLayout>
    <!-- Contenedor-->
    <LinearLayout
        android:id="@+id/contenedor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/BotonesAbajo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <!-- Fila1-->
    <LinearLayout
        android:id="@+id/fila1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnVehiculos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria1"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/vehiculos"
            android:textSize="13dp"/>
        <Button
            android:id="@+id/btnRopa_de_mujer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria2"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/mujer"
            android:textSize="13dp"/>
        <Button
            android:id="@+id/btnElectronica"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria3"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/electronica"
            android:textSize="13dp"/>
        </LinearLayout>
        <!-- Fila 2-->
        <LinearLayout
            android:id="@+id/fila2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:id="@+id/btnMuebles"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria4"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/sofa"
            android:textSize="13dp"/>
        <Button
            android:id="@+id/btnRopa_de_varon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria5"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ropadevaron"
            android:textSize="13dp"/>
        <Button
            android:id="@+id/btnAlquileres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria6"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/alquileres"
            android:textSize="13dp"/>
        </LinearLayout>
    <!-- Fila 3 -->
        <LinearLayout
            android:id="@+id/fila3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
            android:id="@+id/btnInstrumentos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria7"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/instrumentos"
            android:textSize="13dp"/>
        <Button
            android:id="@+id/btnRopa_de_bebe"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria8"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/ropadebebe"
            android:textSize="13dp"/>
        <Button
            android:id="@+id/btndeportes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/categoria9"
            android:gravity="center"
            android:paddingVertical="16dp"
            android:background="@android:color/transparent"
            android:textColor="@color/black"
            android:drawableTop="@drawable/deportes"
            android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/BotonesAbajo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/btnCasa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/casita"/>
        <Button
            android:id="@+id/btnCarrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/carrito1"/>
        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/foto_perfil"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>