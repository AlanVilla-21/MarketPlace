<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VenderProductos">
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/black"
        android:paddingStart ="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/Menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/treslineas" />
        <TextView
            android:id="@+id/MarcoNegro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/vender_producto"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="@color/white" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/BotonesAbajo"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <Button
            android:id="@+id/btnCasa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/casita"/>
        <Button
            android:id="@+id/btnCarrito"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/carrito1"/>
        <Button
            android:id="@+id/btnPerfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/foto_perfil"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/formProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Categoría -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:textSize="12sp" />
        <EditText
            android:id="@+id/etCategoria"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Categoria"
            android:background="@android:drawable/edit_text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="4dp" />
        <!-- Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="12sp"
            android:layout_marginTop="12dp" />
        <EditText
            android:id="@+id/etDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="2"
            android:hint="Descripción"
            android:background="@android:drawable/edit_text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="4dp" />
        <!-- Precio -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textSize="12sp"
            android:layout_marginTop="12dp" />
        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Bs."
            android:inputType="numberDecimal"
            android:background="@android:drawable/edit_text"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="4dp" />

        <!-- Botón Publicar -->
        <Button
            android:id="@+id/btnPublicarProducto"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Publicar producto"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/black"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>