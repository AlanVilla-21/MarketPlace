<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = ".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
    <View
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txtMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â˜°"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="@id/topBar"
        app:layout_constraintTop_toTopOf="@id/topBar" />

    <TextView
        android:id="@+id/txtTituloApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Market"
        android:textSize="25sp"
        android:textColor="@android:color/white"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintEnd_toEndOf="@id/topBar"
        app:layout_constraintStart_toStartOf="@id/topBar"
        app:layout_constraintTop_toTopOf="@id/topBar" />
    <TextView
        android:id="@+id/txtPlaceholderProductos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqui va la lista de productos"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="@id/topBar"/>

        <View
            android:id="@+id/bottomDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/BotonesAbajo"/>
        <LinearLayout
            android:id="@+id/BotonesAbajo"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/white"
            android:paddingHorizontal="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView
                android:id="@+id/imgCasa"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/casita"
                android:contentDescription="@string/inicio"/>
            <ImageView
                android:id="@+id/imgCarrito"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/carrito1"
                android:contentDescription="@string/agregar_carrito"/>
            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:src="@drawable/foto_perfil"
                android:contentDescription="@string/perfil"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
       android:id="@+id/menuLateral"
       layout="@layout/layout_menu_lateral"
       android:layout_width="280dp"
       android:layout_height="match_parent"
       android:layout_gravity="start"/>


</androidx.drawerlayout.widget.DrawerLayout>