<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/venderRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VenderProductoActivity">

    <!-- Barra superior -->
    <LinearLayout
        android:id="@+id/topBarVender"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    <!-- Flecha atrás -->
    <TextView
        android:id="@+id/btnBackVender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="←"
        android:textSize="20sp" />

    <!-- Título -->
        <TextView
            android:id="@+id/txtTituloVender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=" Vender producto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_weight="1" />
    </LinearLayout>
    <TextView
        android:id="@+id/txtSeleccionarImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar imagen desde el dispositivo"
        android:textSize="12sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/topBarVender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />
    <TextView
        android:id="@+id/txtVenderTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vender"
        android:textSize="14sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/txtSeleccionarImagen"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp" />
    <LinearLayout
        android:id="@+id/formProducto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/txtVenderTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
    <!-- Categoría -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:textSize="12sp" />
    <EditText
        android:id="@+id/etCategoria"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Categoria"
        android:background="@android:drawable/edit_text"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="4dp" />
    <!-- Descripción -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripción"
        android:textSize="12sp"
        android:layout_marginTop="12dp" />
    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minLines="2"
        android:hint="Descripción"
        android:background="@android:drawable/edit_text"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="4dp" />
    <!-- Precio -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio"
        android:textSize="12sp"
        android:layout_marginTop="12dp" />
    <EditText
        android:id="@+id/etPrecio"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Bs."
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="4dp" />

    <!-- Botón Publicar -->
    <Button
        android:id="@+id/btnPublicarProducto"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Publicar producto"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/black"
        android:layout_marginTop="16dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/BotonesAbajo"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/imgCasa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/casita"
            android:contentDescription="@string/inicio"/>
        <ImageView
            android:id="@+id/imgCarrito"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/carrito1"
            android:contentDescription="@string/agregar_carrito"/>
        <ImageView
            android:id="@+id/imgPerfil"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:src="@drawable/foto_perfil"
            android:contentDescription="@string/perfil"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>